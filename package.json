{
  "name": "time-logger-api",
  "version": "0.0.1",
  "description": "todo api app",
  "repository": {
    "type": "git",
    "url": "https://github.com/UchihaVeha/todo-api-app.git"
  },
  "engines": {
    "node": "8.9.0",
    "npm": "5.5.1"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm run migrate && node ./node_modules/.bin/pm2 start build/index.js -i max --attach",
    "start:dev": "npx nodemon index-dev.js",
    "build": "npx babel src --out-dir build",
    "lint": "npx eslint -c .eslintrc src",
    "test": "npm run lint && npx jest",
    "migrate": "npx knex migrate:latest",
    "migrate-down": "npx knex migrate:rollback",
    "prettify": "npx prettier --single-quote --trailing-comma none --write \"src/**/*.js\""
  },
  "author": "Vitaliy Kolodeev",
  "license": "ISC",
  "dependencies": {
    "Validator": "^1.0.5",
    "bcryptjs": "^2.4.3",
    "boom": "^6.0.0",
    "joi": "^13.0.1",
    "jsonwebtoken": "^8.1.0",
    "kcors": "^2.2.1",
    "knex": "^0.13.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-jwt": "^3.2.2",
    "koa-pino-logger": "^2.1.1",
    "koa-router": "^7.2.1",
    "lodash": "^4.17.4",
    "moment": "^2.19.1",
    "pg": "^7.3.0",
    "pm2": "^2.7.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-register": "^6.26.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "jest": "^21.2.1",
    "node-fetch": "^1.7.3",
    "nodemon": "^1.12.1",
    "pgtools": "^0.3.0",
    "prettier": "^1.7.4",
    "randomatic": "^1.1.7"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
